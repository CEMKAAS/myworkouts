<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DayFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
            android:id="@+id/tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:toggle_selectableAmount="5"
            app:justifyContent="space_between"
            app:flexWrap="wrap">

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/tag1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="1dp"
                app:toggle_text="Понедельник" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/tag2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="1dp"
                app:toggle_text="Вторник" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/tag3"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="1dp"
                app:toggle_text="Среда" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/tag4"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="1dp"
                app:toggle_text="Четверг" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/tag5"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="1dp"
                app:toggle_text="Пятница" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/tag6"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="1dp"
                app:toggle_text="Суббота" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/tag7"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="1dp"
                app:toggle_text="Воскресенье" />

        </nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft=""
            android:layout_gravity="center"
            android:text="дальше >" />
    </LinearLayout>

</FrameLayout>